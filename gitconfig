[core]
	safecrlf = true
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	type = cat-file -t
	dump = cat-file -p
	fullhashlog = "log --graph --abbrev-commit '--format=format:%H %C(yellow)%ci%Creset %Cgreen%an%Creset | %s'"
	w = whatchanged
	unpushed = !"PROJ_BRANCH=$(git symbolic-ref HEAD | sed 's|refs/heads/||') && git log origin/$PROJ_BRANCH..HEAD"

[color]
	ui = auto
	pager = true
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
  removed = red

[format]
	pretty = format:'%Cred%h%Creset -%Cblue%an%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset'
[user]
	name = Filipe Costa
	email = filipebarcos@gmail.com
[credential]
	helper = osxkeychain
